// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  tasks         Task[]
  notes         Note[]
  preferences   UserPreferences?
  progress      UserProgress?

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Task {
  id           String    @id @default(cuid())
  userId       String
  title        String
  description  String?
  priority     String    @default("medium") // low, medium, high
  tags         String   @default("[]") // JSON array as string for SQLite
  dueDate      DateTime?
  colorLabel   String    @default("#3b82f6") // hex color
  reminderTime DateTime?
  subtasks     String?  // JSON string for SQLite
  status       String    @default("pending") // pending, done
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  order        Int       @default(0)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tasks")
  @@index([userId, status])
}

model Note {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String
  color     String   @default("#fbbf24") // hex color
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notes")
  @@index([userId])
}

model UserPreferences {
  id                    String   @id @default(cuid())
  userId                String   @unique
  language              String   @default("EN") // EN, FR, AR
  focusTime             Int      @default(25) // minutes
  breakTime             Int      @default(5) // minutes
  longBreakTime         Int      @default(15) // minutes
  soundPreference       String?  // sound name
  notificationsEnabled  Boolean  @default(true)
  theme                 String   @default("colorful") // light, dark, colorful
  dyslexiaFont          Boolean  @default(false)
  largeUIMode           Boolean  @default(false)
  highContrast          Boolean  @default(false)
  reminderFrequency     String   @default("normal") // low, normal, high
  autoStartNextCycle    Boolean  @default(false)
  pomPersonality        String   @default("warm-accountability") // personality mode
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model UserProgress {
  id              String   @id @default(cuid())
  userId          String   @unique
  xp              Int      @default(0)
  level           Int      @default(1)
  currentStreak   Int      @default(0)
  longestStreak   Int      @default(0)
  tasksCompleted  Int      @default(0)
  sessionsCompleted Int    @default(0)
  lastActiveDate  DateTime?
  badges          String   @default("[]") // JSON array as string for SQLite
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_progress")
}

